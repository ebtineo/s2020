{% extends 'base.html.twig' %}

{% block stylesheets %}
 <link href="{{ asset('/css/estilo.css') }}" type="text/css" rel="stylesheet" />
 <link href="{{ asset('/css/colorbox.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
	<div id="cabecera">
	  <h1>Información de alimentos</h1>
	</div>

	<div id="menu">
		<hr/>
		<a href="{{ path('app_alimentos_inicio')}}">Inicio</a> |
		<a href="{{ path('app_alimentos_listar')}}">Ver alimentos</a> |
		{# <a href="{{ path('app_alimentos_edit2')}}">Editar</a> | #}
		{% if usuario is defined %}
			<a href="{{ path('app_alimentos_insertar')}}">Insertar alimento</a> |
		{% endif %}
		<a href="{{ path('app_alimentos_buscarPorNombre')}}">Buscar por nombre</a> |
		<a href="{{ path('app_alimentos_buscarPorEnergia')}}">Buscar por energia</a> |
		<a href="{{ path('app_alimentos_buscarAlimentosCombinada')}}">Búsqueda combinada</a> |
		<a href="{{ path('app_alimentos_wiki')}}">Wiki</a> |
		
		{% if usuario is not defined %}
			<a href="{{ path('app_alimentos_login')}}">Login</a>
			{# <a href="{{ path('app_alimentos_cerrarSesion')}}">Cerrar Sesión</a> #}
		{% endif %}

		{% if usuario is defined %}
			<a href="{{ path('app_alimentos_cerrarSesion')}}">Cerrar Sesión</a>
		{% endif %}
		  
		<hr/>
	</div>

	<div id="contenido">
		{% block contenido %}

		{% endblock %}
	</div>

	<div id="pie">
		<hr/>
		<div align="center">- pie de página -</div>
	</div>

	{% block javascript %}
		<script src="{{ asset('/js/jquery.js')}}" type="text/javascript"></script>
		<script src="{{ asset('/js/colorbox-master/jquery.colorbox.js')}}" type="text/javascript"></script>
		<script>
			$(document).ready(function(){
				$(".cajamodal").colorbox({iframe:true, width:"1000px", height:"1000px", scrolling:true});
			});
		</script>
	{% endblock %}	

{% endblock %}